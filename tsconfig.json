{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "declaration": true,
    "sourceMap": true,
  },
  "include": [
    "src/**/*",
    "vitest.config.ts" // Include Vitest config if it's TypeScript
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}