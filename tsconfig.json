{
  "compilerOptions": {
    "target": "ES2022", // Modern target
    "module": "ESNext", // Use ESNext for module system
    "moduleResolution": "bundler", // Or "NodeNext", modern resolution strategy
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "declaration": true,
    "sourceMap": true, // Good for debugging
  },
  "include": [
    "src/**/*",
    "vitest.config.ts" // Include Vitest config if it's TypeScript
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}